<?xml version='1.0' encoding='utf-8'?>
<widget id="io.cordova.lysedebiyat" version="1.1.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>LYS Edebiyat Bilgi Yarışması</name>
    <description>
        LYS Edebiyat sınavı için oluşturulmuş 2000'i aşkın kitap - yazar ikilisini barındıran bir soru cevap oyunu.
    </description>
    <author email="burak.karakan@gmail.com" href="http://karakanb.github.io/lys-edebiyat">
        Burak Karakan
    </author>
    <icon src="res/android/icon.png" />
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <icon src="res/android/icon.png" density="xxxhdpi" />
        <preference name="Orientation" value="portrait" />
              
        <splash src="res/android/screen.png" density="port-hdpi"/>
        <splash src="res/android/screen.png" density="port-ldpi"/>
        <splash src="res/android/screen.png" density="port-mdpi"/>
        <splash src="res/android/screen.png" density="port-xhdpi"/>
        <preference name="SplashScreen" value="screen" />
        <preference name="AutoHideSplashScreen" value="true" />
        <preference name="SplashMaintainAspectRatio" value="true" />
        <preference name="ShowSplashScreenSpinner" value="false"/>
        
    </platform>

</widget>
